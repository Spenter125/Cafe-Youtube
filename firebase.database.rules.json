{
  "rules": {
    "rooms": {
      "$room": {
        ".read": "auth != null",
        "profiles": {
          "$uid": {
            ".write": "auth != null && ($uid === auth.uid || (root.child('rooms/'+$room+'/host').val() === auth.uid && !newData.exists() && data.child('ts').val() <= now - 120000))",
            ".validate": "(newData.exists() && newData.child('name').isString() && newData.child('name').val().length > 0 && newData.child('name').val().length <= 32 && newData.child('color').isString() && newData.child('ts').isNumber()) || (!newData.exists())"
          }
        }
      }
    }
  }
}